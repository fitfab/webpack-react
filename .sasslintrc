{
    "options": {
        "formatter": "stylish",
        "merge-default-rules": false
    },
    "files": {
        "include": "src/**/*.s+(a|c)ss",
        "ignore": [
            "src/styles/base/_scaffolding.scss",
            "src/styles/base/_typography.scss",
            "src/styles/mixins/_vertical-rhythm.scss",
            "src/components/UICarousel/UICarousel.scss"
        ]
    },
    "rules": {
        "brace-style": 2,
        "single-line-per-selector": 2,
        "clean-import-paths": 2,
        "empty-args": [2, {"include": true}],
        "extends-before-declarations": 2,
        "mixins-before-declarations": 0,
        "final-newline": 2,
        "force-attribute-nesting": 0,
        "force-pseudo-nesting": 0,
        "nesting-depth": 0,
        "function-name-format": 2,
        "mixin-name-format": 2,
        "variable-name-format": 2,
        "no-color-keywords": 2,
        "no-invalid-hex": 2,
        "hex-length": 0,
        "hex-notation": 2,
        "indentation": [2, {"size": 4}],
        "leading-zero": [2, {"include": true}],
        "no-trailing-zero": 2,
        "no-css-comments": 2,
        "no-debug": 2,
        "no-empty-rulesets": 2,
        "no-ids": 0,
        "no-misspelled-properties": [2, {"extra-properties": [
            "osx-font-smoothing", "overflow-scrolling", "touch-callout"
        ]}],
        "no-url-protocols": 0,
        "url-quotes": 2,
        "one-declaration-per-line": 2,
        "property-sort-order": [2, {"order": "smacss"}],
        "quotes": [2, {"style": "single"}],
        "empty-line-between-blocks": [2, {"allow-single-line-rulesets": false}],
        "space-after-bang": 2,
        "space-before-bang": 2,
        "space-after-colon": 2,
        "space-before-colon": 2,
        "space-after-comma": 2,
        "space-before-brace": 2,
        "space-between-parens": 2,
        "trailing-semicolon": 2,
        "zero-unit": 2,
        "border-zero": 0,
        "extends-before-mixins": 0,
        "force-element-nesting": 0,
        "no-color-literals": 0,
        "no-duplicate-properties": 0,
        "no-extends": 0,
        "no-important": 0,
        "no-mergeable-selectors": 0,
        "no-qualifying-elements": 0,
        "no-transition-all": 0,
        "no-vendor-prefixes": 0,
        "no-warn": 0,
        "placeholder-in-extend": 0,
        "placeholder-name-format": 0,
        "variable-for-property": 0
    }
}
